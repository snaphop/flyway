<settings>
  <activeProfiles>
    <activeProfile>snaphop</activeProfile>
  </activeProfiles>
  <servers>
      <server>
        <id>snaphop-deploy-public-snapshot</id>
        <username>public-snapshot</username>
      	<password>${env.NEXUS_SNAPHOP_COM_PASSWORD}</password>
      </server>
      <server>
        <id>snaphop-deploy-public-release</id>
        <username>public-release</username>
      	<password>${env.NEXUS_SNAPHOP_COM_PASSWORD}</password>
      </server>
      <server>
        <id>snaphop-deploy-private-release</id>
        <username>private-release</username>
      	<password>${env.NEXUS_SNAPHOP_COM_PASSWORD}</password>
      </server>
      <server>
        <id>snaphop-deploy-private-snapshot</id>
        <username>private-snapshot</username>
      	<password>${env.NEXUS_SNAPHOP_COM_PASSWORD}</password>
      </server>
  </servers>
  <profiles>
    <profile>
      <id>snaphop</id>
      <properties>
        <snaphop.deploy.url.public.release>https://maven.snaphop.com/deploy/repository/public-release/</snaphop.deploy.url.public.release>
        <snaphop.deploy.url.public.snapshot>https://maven.snaphop.com/deploy/repository/public-snapshot/</snaphop.deploy.url.public.snapshot>
        <snapshotRepository.id>snaphop-deploy-public-snapshot</snapshotRepository.id>
        <snapshotRepository.name>${snapshotRepository.id}</snapshotRepository.name>
        <snapshotRepository.url>${snaphop.deploy.url.public.snapshot}</snapshotRepository.url>
        <releaseRepository.id>snaphop-deploy-public-release</releaseRepository.id>
        <releaseRepository.name>${releaseRepository.id}</releaseRepository.name>
        <releaseRepository.url>${snaphop.deploy.url.public.release}</releaseRepository.url>
      </properties>
    </profile>
  </profiles>
</settings>
